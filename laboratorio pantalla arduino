#include <LiquidCrystal.h>
 +
 +LiquidCrystal lcd(12,11,5,4,3,2);
 +
 +void setup (){
 +  lcd.begin (16, 2);
 +  lcd.print ("Hola mundo...!!!");
 +}
 +
 +
 +void loop() {
 +  // Turn off the blinking cursor:
 +  lcd.noBlink();
 +  delay(3000);
 +  // Turn on the blinking cursor:
 +  lcd.blink();
 +  delay(3000);
 +}
